# IA Trading API Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Required API Keys
# =============================================================================

# Alpha Vantage API Key (for financial news)
# Get your key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Google Gemini API Key (for AI sentiment analysis)
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_key_here

# =============================================================================
# Optional API Keys
# =============================================================================

# Reddit API Credentials (for Reddit posts)
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# =============================================================================
# Feature Flags
# =============================================================================

# Enable Twitter scraping (requires ntscraper)
TWITTER_ENABLED=false

# Enable background scheduler for automatic news fetching
SCHEDULER_ENABLED=false

# =============================================================================
# Database (for production with docker-compose)
# =============================================================================

# DATABASE_URL=jdbc:postgresql://localhost:5432/ia_trading
# DATABASE_USERNAME=postgres
# DATABASE_PASSWORD=postgres
